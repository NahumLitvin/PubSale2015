<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:id="@+id/auction_view_layout"

             android:orientation="vertical"
>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
    >

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_column="0"
                android:layout_margin="0dp"
                android:text="@string/item_name"
                android:layout_gravity="top"
                android:layout_weight="1"
        />


        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_name"
                android:layout_column="1"
                android:maxLength="20"
                android:enabled="false"
                android:focusable="false"
                android:layout_margin="0dp"
                android:layout_weight="1"
        />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Category"
                android:id="@+id/txtCategory"
                android:layout_column="2"
                android:layout_margin="0dp"
                android:layout_weight="1"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tv_category"
                android:layout_column="3"
                android:enabled="false"
                android:focusable="false"
                android:layout_margin="0dp"
                android:layout_weight="1"
        />


    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:orientation="vertical"
    >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_auction_name"
                android:layout_column="0"
                android:text="@string/auction_end"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/tv_auction_end"
                android:layout_column="1"
                android:enabled="false"
                android:focusable="false"
                android:layout_margin="0dp"
                android:layout_gravity="center"
        />
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:orientation="vertical"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_price"
                android:id="@+id/txt_staring_price"
                android:layout_column="0"
                android:layout_margin="0dp"
        />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/tv_starting_price"
                android:layout_column="1"
                android:enabled="false"
                android:focusable="false"
                android:layout_margin="0dp"
        />
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/immediate_buy"
                android:id="@+id/textView2"
                android:layout_column="0"
                android:layout_margin="0dp"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/tv_immediate_buy_price"
                android:layout_column="1"
                android:hint="@string/max_price"
                android:enabled="false"
                android:focusable="false"
                android:layout_margin="0dp"
        />
    </TableRow>


    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
    >

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iw_auction"
                android:layout_column="0"
                android:src="@drawable/ic_launcher"
                android:contentDescription="@string/items_photo"
                android:layout_margin="0dp"
        />
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:orientation="vertical"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:id="@+id/txtDescription"
                android:layout_column="0"
                android:layout_margin="0dp"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/tv_description"
                android:layout_column="1"
                android:maxLength="200"
                android:hint="@string/max_chars_200"
                android:enabled="false"
                android:focusable="false"
                android:layout_margin="0dp"
        />
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
    >

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/et_bid"
                android:layout_column="0"
                android:hint="@string/your_bid"
                android:layout_span="1"
                android:layout_margin="0dp"
        />


    </TableRow>


    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bid"
                android:id="@+id/btn_bid"
                android:layout_column="0"

                android:layout_margin="0dp"
                android:enabled="true"
                android:clickable="true"
                android:focusableInTouchMode="true"
        />
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
    >

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buy_now_for"
                android:id="@+id/btn_buy_now"
                android:layout_column="0"
                android:background="#ffff0000"
                android:layout_margin="0dp"
                android:enabled="true"
                android:clickable="true"
                android:focusableInTouchMode="true"
        />
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/winner_name"
                android:id="@+id/textView3"
                android:layout_column="0"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/phone"
                android:id="@+id/textView4"
                android:layout_column="1"
        />
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tv_winner_name"
                android:layout_column="0"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tv_winner_phone"
                android:layout_column="1"
        />
    </TableRow>

</TableLayout>